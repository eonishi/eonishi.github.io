---
import CursorFX from "../components/CursorFX.astro";
import Background from "../components/Background.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Eduardo Onishi " />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-satin-100">
		<Background>
			<CursorFX />
		</Background>
		<slot />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: "Givonic Variable";
		src: url("/fonts/GivonicVariable.ttf") format("truetype");
	}
	:root {
		color-scheme: dark light;
	}
	html {
		font-family: "Givonic Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		min-height: 100vh;
		overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
